<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Funny Cute Website</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background: #FFF0F5;
      font-family: 'Comic Sans MS', cursive, sans-serif;
      text-align: center;
      overflow: hidden;
    }

    h1 {
      color: #FF69B4;
      font-size: 3em;
      margin-top: 50px;
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-20px); }
    }

    p {
      font-size: 1.5em;
      color: #FF1493;
      margin-bottom: 40px;
    }

    button {
      background-color: #FFB6C1;
      border: none;
      border-radius: 25px;
      padding: 15px 30px;
      font-size: 1em;
      color: white;
      cursor: pointer;
      transition: 0.3s;
    }

    button:hover {
      background-color: #FF69B4;
      transform: rotate(15deg) scale(1.2);
    }

    /* Floating funny emojis */
    .emoji {
      position: absolute;
      font-size: 2em;
      animation: floatUp linear infinite;
    }

    @keyframes floatUp {
      0% { transform: translateY(100vh) rotate(0deg); opacity: 0; }
      50% { opacity: 1; }
      100% { transform: translateY(-100px) rotate(360deg); opacity: 0; }
    }
  </style>
</head>
<body>

  <h1>üòÇ Welcome! ‚ù§Ô∏è</h1>
  <p>This is my funny cute website üå∏</p>
  <button onclick="alert('You found the secret button! üòé')">Click Me!</button>

  <script>
    // Generate floating emojis
    const emojis = ['üòÇ','üçï','üê∂','üå∏','üí©','üê±','üç©','üëª','üòé'];
    function createEmoji() {
      const span = document.createElement('span');
      span.className = 'emoji';
      span.textContent = emojis[Math.floor(Math.random() * emojis.length)];
      span.style.left = Math.random() * window.innerWidth + 'px';
      span.style.fontSize = (20 + Math.random() * 40) + 'px';
      span.style.animationDuration = (5 + Math.random() * 5) + 's';
      document.body.appendChild(span);
      setTimeout(() => span.remove(), 10000); // remove after animation
    }
    setInterval(createEmoji, 500);
  </script>

</body>
</html>
